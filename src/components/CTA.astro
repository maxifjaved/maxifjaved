---
export interface CTAType {
  title: string;
  description: string;
  button: { label: string; href: string };
}

const ctaData: CTAType = {
  title: "Transform Your Business with AI",
  description:
    "Partner with Futura AI Solutions to unlock the power of artificial intelligence. From intelligent automation to advanced analytics, we deliver solutions that drive innovation and growth.",
  button: { label: "Get Started Today", href: "/contact" },
};
---

<section id="cta" class="bg-cyber-dark/50 py-24 relative overflow-hidden">
  <div
    class="absolute w-96 h-96 bg-cyber-blue/10 rounded-full blur-3xl top-0 left-0 animate-pulse-slow"
  ></div>
  <div
    class="absolute w-64 h-64 bg-cyber-blue/10 rounded-full blur-3xl bottom-0 right-0 animate-pulse-slow"
    style="animation-delay: 2s;"
  ></div>

  <div class="max-w-7xl mx-auto px-6 relative text-center">
    <h2 class="text-4xl lg:text-5xl font-bold mb-6">
      <span class="text-cyber-blue text-shadow-glow">
        {ctaData.title.split(" ")[0]}
      </span>{" "}
      {ctaData.title.slice(ctaData.title.indexOf(" ") + 1)}
    </h2>
    <p class="text-gray-300 text-lg mb-8 max-w-2xl mx-auto">
      {ctaData.description}
    </p>

    <div
      x-data="{ visible: false }"
      x-intersect.once="visible = true"
      x-bind:class="visible ? 'animated fadeInUp delay100' : 'opacity-0'"
    >
      <a
        href={ctaData.button.href}
        class="inline-flex items-center justify-center cyber-btn bg-cyber-blue hover:bg-cyber-blue/80 text-cyber-dark font-bold py-4 px-10 text-lg transition-all duration-300 glow"
      >
        {ctaData.button.label}
      </a>
    </div>
  </div>
</section>