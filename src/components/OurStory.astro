---
export interface OurStoryType {
  title: string;
  whoWeAre: {
    title: string;
    paragraphs: string[];
  };
  codeBlock: {
    fileName: string;
    properties: { key: string; value: string | number | string[] }[];
  };
}

const ourStoryData: OurStoryType = {
  title: "Our Story",
  whoWeAre: {
    title: "Who We Are",
    paragraphs: [
      "Founded in 2021 in San Francisco, Futura AI Solutions started with a vision to harness artificial intelligence to solve real-world challenges. Today, with a team of over 150 experts, we are a global leader in AI innovation, serving industries like healthcare, finance, retail, and more.",
      "Our mission is to empower businesses with AI-driven insights and automation, enabling them to thrive in a rapidly evolving digital landscape.",
    ],
  },
  codeBlock: {
    fileName: "futura.tsx",
    properties: [
      { key: "vision", value: "Empower businesses with AI" },
      { key: "founded", value: 2021 },
      { key: "mission", value: "Drive innovation through AI" },
      { key: "values", value: ["Innovation", "Integrity", "Impact"] },
    ],
  },
};
---

<section
  id="our-story"
  class="bg-cyber-dark/60 py-24 relative overflow-hidden"
>
  <div class="max-w-7xl mx-auto px-6">
    <div
      class="absolute w-96 h-96 bg-cyber-blue/5 rounded-full blur-3xl -bottom-20 -right-20"
    ></div>

    <div class="flex justify-center mb-16">
      <div class="relative">
        <h2 class="text-3xl md:text-4xl font-bold text-center">
          {ourStoryData.title.split(" ")[0]}{" "}
          <span class="text-cyber-blue text-shadow-glow">
            {ourStoryData.title.split(" ")[1]}
          </span>
        </h2>
        <div class="h-1 w-24 bg-cyber-blue mt-4 mx-auto rounded-full glow"></div>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-16 items-center">
      <div>
        <h3 class="text-2xl font-bold mb-6 text-cyber-blue">
          {ourStoryData.whoWeAre.title}
        </h3>
        {ourStoryData.whoWeAre.paragraphs.map((paragraph) => (
          <p class="text-gray-300 mb-6">{paragraph}</p>
        ))}
      </div>

      <div class="relative">
        <div
          class="absolute inset-0 bg-cyber-blue/5 rounded-xl blur-md"
        ></div>
        <div
          class="border border-cyber-blue/20 bg-cyber-dark/50 backdrop-blur-sm rounded-xl p-6 relative"
        >
          <div class="flex items-center mb-6">
            <div class="w-3 h-3 rounded-full bg-red-500 mr-2"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500 mr-2"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
            <div class="ml-4 text-cyber-blue text-sm">
              {ourStoryData.codeBlock.fileName}
            </div>
          </div>
          <div class="font-mono text-sm">
            <div class="mb-2">
              <span class="text-pink-400">const</span>{" "}
              <span class="text-yellow-400">futura</span>{" "}
              <span class="text-blue-400">=</span>{" "}
              <span class="text-orange-400">{"{"}</span>
            </div>
            {ourStoryData.codeBlock.properties.map((prop, index) => (
              <>
                <div class="mb-2 pl-4">
                  <span class="text-green-400">{prop.key}</span>:{" "}
                  {typeof prop.value === "string" ? (
                    <span class="text-blue-300">'{prop.value}'</span>
                  ) : typeof prop.value === "number" ? (
                    <span class="text-purple-400">{prop.value}</span>
                  ) : (
                    <>
                      [
                      <div class="mb-2 pl-8">
                        {prop.value.map((val) => (
                          <span class="text-blue-300">'{val}', </span>
                        ))}
                      </div>
                      <div class="pl-4">],</div>
                    </>
                  )}
                  {index < ourStoryData.codeBlock.properties.length - 1 ||
                  Array.isArray(prop.value)
                    ? ","
                    : ""}
                </div>
              </>
            ))}
            <div>
              <span class="text-orange-400">{"}"}</span>;
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>