---
import Timeline from "./Timeline.astro";
import Counter from "./Counter.astro";

export interface AboutType {
  title: string;
  mission: {
    title: string;
    description: string;
  };
  about: {
    name: string;
    projects: string;
    livesIn: string;
    experience: string;
    expertise: string[];
    industries: string[];
  };
  competencies: { label: string; value: number }[];
  tools: string[];
}

const aboutData: AboutType = {
  title: "About Me",
  mission: {
    title: "My Mission",
    description:
      "I help organizations—from educational institutions to enterprises—build scalable, secure real-time platforms that elevate collaboration, data insights, and user engagement. With over a decade of experience, I deliver comprehensive solutions from WebRTC-powered collaboration systems to cybersecurity intelligence tools across EdTech, InsureTech, and business intelligence sectors. <br><br>Explore my <a href='/projects' class='text-cyber-blue hover:text-white transition-colors font-semibold'>complete project portfolio</a> or learn about my <a href='/services' class='text-cyber-blue hover:text-white transition-colors font-semibold'>development services</a>.",
  },
  about: {
    name: "Muhammad Asif Javed",
    projects: "9+",
    livesIn: "Walton, Lahore, PK",
    experience: "10+ years",
    expertise: [
      "Full-Stack Development",
      "WebRTC & Real-time Systems",
      "Interactive Display Technology",
      "Platform Integration",
      "Solo Project Leadership",
      "Cross-platform Development",
    ],
    industries: ["EdTech", "Interactive Displays", "Cybersecurity", "Insurance Tech", "Business Intelligence"],
  },
  competencies: [
    { label: "Full-Stack Development", value: 95 },
    { label: "Real-time Systems & WebRTC", value: 92 },
    { label: "Platform Integration & APIs", value: 90 },
    { label: "Solo Development & Leadership", value: 88 },
  ],
  tools: ["React & Next.js", "Node.js", "MongoDB", "WebRTC & OpenVidu", "Digital Ocean", "Socket.io & Fabric.js"],
};
---

<section
  id="about"
  class="bg-cyber-dark/60 py-24 relative overflow-hidden"
>
  <div class="max-w-7xl mx-auto px-6">
    <div
      class="absolute w-96 h-96 bg-cyber-blue/5 rounded-full blur-3xl -bottom-20 -right-20"
    ></div>

    <div class="flex justify-center mb-16">
      <div class="relative">
        <h2 class="text-3xl md:text-4xl font-bold text-center">
          {aboutData.title.split(" ")[0]}{" "}
          <span class="text-cyber-blue text-shadow-glow">
            {aboutData.title.split(" ").slice(1).join(" ")}
          </span>
        </h2>
        <div class="h-1 w-24 bg-cyber-blue mt-4 mx-auto rounded-full glow"></div>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-16 items-center mb-24">
      <div class="relative">
        <div
          class="absolute inset-0 bg-cyber-blue/5 rounded-xl blur-md"
        ></div>
        <div
          class="border border-cyber-blue/20 bg-cyber-dark/50 backdrop-blur-sm rounded-xl p-6 relative"
        >
          <div class="flex items-center mb-6">
            <div class="w-3 h-3 rounded-full bg-red-500 mr-2"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500 mr-2"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
            <div class="ml-4 text-cyber-blue text-sm">about.tsx</div>
          </div>

          <div class="font-mono text-sm">
            <div class="mb-2">
              <span class="text-pink-400">const</span>{" "}
              <span class="text-yellow-400">about</span>{" "}
              <span class="text-blue-400">=</span>{" "}
              <span class="text-orange-400">{"{"}</span>
            </div>
            <div class="mb-2 pl-4">
              <span class="text-green-400">name</span>:{" "}
              <span class="text-blue-300">'{aboutData.about.name}'</span>,
            </div>
            <div class="mb-2 pl-4">
              <span class="text-green-400">projects</span>:{" "}
              <span class="text-purple-400">{aboutData.about.projects}</span>,
            </div>
            <div class="mb-2 pl-4">
              <span class="text-green-400">Based in</span>:{" "}
              <span class="text-blue-300">
                '{aboutData.about.livesIn}'
              </span>,
            </div>
            <div class="mb-2 pl-4">
              <span class="text-green-400">experience</span>:{" "}
              <span class="text-purple-400">{aboutData.about.experience}</span>,
            </div>
            <div class="mb-2 pl-4">
              <span class="text-green-400">expertise</span>: [
            </div>
            <div class="mb-2 pl-8">
              {aboutData.about.expertise
                .slice(0, 3)
                .map((item) => (
                  <span class="text-blue-300">'{item}', </span>
                ))}
            </div>
            <div class="mb-2 pl-8">
              {aboutData.about.expertise
                .slice(3)
                .map((item) => (
                  <span class="text-blue-300">'{item}', </span>
                ))}
            </div>
            <div class="mb-2 pl-4">],</div>
            <div class="mb-2 pl-4">
              <span class="text-green-400">industries</span>: [
            </div>
            <div class="mb-2 pl-8">
              {aboutData.about.industries
                .slice(0, 3)
                .map((item) => (
                  <span class="text-blue-300">'{item}', </span>
                ))}
            </div>
            <div class="mb-2 pl-8">
              {aboutData.about.industries
                .slice(3)
                .map((item) => (
                  <span class="text-blue-300">'{item}', </span>
                ))}
            </div>
            <div class="mb-2 pl-4">]</div>
            <div>
              <span class="text-orange-400">{"}"}</span>;
            </div>
          </div>
        </div>
      </div>

      <div>
        <h3 class="text-2xl font-bold mb-6 text-cyber-blue">
          {aboutData.mission.title}
        </h3>
        <p class="text-gray-300 mb-6">{aboutData.mission.description}</p>

        <h3 class="text-2xl font-bold mb-6 text-cyber-blue">
          Core Competencies
        </h3>

        <div class="space-y-4 mb-8">
          {aboutData.competencies.map((comp) => (
            <div
              x-data={`counter(${comp.value}, 3)`}
              x-intersect="startCounting"
            >
              <div class="flex justify-between mb-1">
                <span class="text-white">{comp.label}</span>
                <span class="text-cyber-blue">
                  <span x-text="current"></span>%
                </span>
              </div>
              <div class="w-full h-2 bg-gray-700 rounded-full">
                <div
                  aria-valuenow="0"
                  aria-valuemin="0"
                  aria-valuemax="100"
                  :style="{ width: current + '%' }"
                  class="h-2 bg-cyber-blue rounded-full"
                ></div>
              </div>
            </div>
          ))}
        </div>

        <div class="flex flex-wrap gap-3 mt-8">
          {aboutData.tools.map((tool) => (
            <span
              class="px-4 py-2 bg-cyber-blue/10 border border-cyber-blue/30 rounded-full text-cyber-blue text-sm"
            >
              {tool}
            </span>
          ))}
        </div>
      </div>
    </div>

    <Timeline />
    <Counter />
  </div>
</section>