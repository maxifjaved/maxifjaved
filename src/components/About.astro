---
import Timeline from "./Timeline.astro";
import Counter from "./Counter.astro";

export interface AboutType {
  title: string;
  mission: {
    title: string;
    description: string;
  };
  about: {
    name: string;
    projects: string;
    livesIn: string;
    experience: string;
    expertise: string[];
    industries: string[];
  };
  competencies: { label: string; value: number }[];
  tools: string[];
}

const aboutData: AboutType = {
  title: "About Me",
  mission: {
    title: "My Mission",
    description:
      "I help organizations—from educational institutions to enterprises—build scalable, secure real-time platforms that elevate collaboration, data insights, and user engagement. With over a decade of experience, I deliver comprehensive solutions from WebRTC-powered collaboration systems to cybersecurity intelligence tools across EdTech, InsurTech, and business intelligence sectors. <br><br>Explore my <a href='/projects' class='text-cyber-blue hover:text-white transition-colors font-semibold'>complete project portfolio</a> or learn about my <a href='/services' class='text-cyber-blue hover:text-white transition-colors font-semibold'>development services</a>.",
  },
  about: {
    name: "Muhammad Asif Javed",
    projects: "9+",
    livesIn: "Walton, Lahore, PK",
    experience: "10+ years",
    expertise: [
      "Full-Stack Development",
      "WebRTC & Real-time Systems",
      "Interactive Display Technology",
      "Platform Integration",
      "Solo Project Leadership",
      "Cross-platform Development",
    ],
    industries: ["EdTech", "Interactive Displays", "Cybersecurity", "InsurTech", "Business Intelligence"],
  },
  competencies: [
    { label: "Full-Stack Development — Complete end-to-end solutions from React frontends to scalable cloud architectures, supporting enterprise-scale applications", value: 95 },
    { label: "Real-time Systems & WebRTC — Live platforms supporting 50+ concurrent users with sub-300ms end-to-end latency", value: 92 },
    { label: "Platform Integration & APIs — Connected 4000+ apps via Zapier and custom API development with seamless data flow", value: 90 },
    { label: "Solo Development & Leadership — Delivered 9+ enterprise projects independently with complete project lifecycle management", value: 88 },
  ],
  tools: ["React & Next.js", "Node.js", "MongoDB", "WebRTC & OpenVidu", "DigitalOcean", "Socket.io & Fabric.js"],
};
---

<section
  id="about"
  class="bg-cyber-dark/60 py-24 relative overflow-hidden"
>
  <div class="max-w-7xl mx-auto px-6">
    <div
      class="absolute w-96 h-96 bg-cyber-blue/5 rounded-full blur-3xl -bottom-20 -right-20"
    ></div>

    <div class="flex justify-center mb-16">
      <div class="relative">
        <h2 class="text-3xl md:text-4xl font-bold text-center">
          {aboutData.title.split(" ")[0]}{" "}
          <span class="text-cyber-blue text-shadow-glow">
            {aboutData.title.split(" ").slice(1).join(" ")}
          </span>
        </h2>
        <div class="h-1 w-24 bg-cyber-blue mt-4 mx-auto rounded-full glow"></div>
      </div>
    </div>

    <div class="max-w-4xl mx-auto mb-24">
      <div>
        <h3 class="text-2xl font-bold mb-6 text-cyber-blue">
          {aboutData.mission.title}
        </h3>
        <p class="text-gray-300 mb-6 text-center" set:html={aboutData.mission.description}></p>

        <h3 class="text-2xl font-bold mb-6 text-cyber-blue text-center">
          Core Competencies
        </h3>

        <div class="space-y-6 mb-8">
          {aboutData.competencies.map((comp) => (
            <div class="bg-cyber-dark/30 border border-cyber-blue/20 rounded-lg p-4">
              <div class="flex justify-between mb-2">
                <span class="text-white text-sm">{comp.label}</span>
              </div>
              <div class="w-full h-2 bg-gray-700 rounded-full">
                <div
                  class="h-2 bg-cyber-blue rounded-full transition-all duration-1000 ease-out"
                  style={`width: ${comp.value}%`}
                ></div>
              </div>
            </div>
          ))}
        </div>

        <div class="flex flex-wrap gap-3 mt-8">
          {aboutData.tools.map((tool) => (
            <span
              class="px-4 py-2 bg-cyber-blue/10 border border-cyber-blue/30 rounded-full text-cyber-blue text-sm"
            >
              {tool}
            </span>
          ))}
        </div>
      </div>
    </div>

    <Timeline />
    <Counter />
  </div>
</section>