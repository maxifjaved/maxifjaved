---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;

if (!tags || tags.length === 0) {
  return null;
}
---

<section id="tags-section" class="relative mb-8">
  <div class="mx-auto max-w-4xl px-6">
    <div class="flex items-center gap-3 flex-wrap">
      <svg class="w-5 h-5 text-cyber-blue flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
      </svg>
      <span class="text-sm font-semibold text-gray-400 uppercase tracking-wider">Tags:</span>
      <div class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <a
            href={`/blogs?search=${encodeURIComponent(tag)}`}
            class="inline-block px-3 py-1 text-sm rounded-full bg-cyber-blue/20 text-cyber-blue border border-cyber-blue/40 hover:bg-cyber-blue hover:text-white transition-all duration-300 hover:shadow-lg hover:shadow-cyber-blue/50"
          >
            #{tag}
          </a>
        ))}
      </div>
    </div>
  </div>
</section>