---
import ServiceCard from './ServiceCard.astro';

export interface ServiceType {
  title: string;
  description: string;
  icon: string;
  features: string[];
}

export const servicesData: ServiceType[] = [
  {
    title: "Real-time Collaboration Systems",
    description:
      "Build enterprise-grade platforms with WebRTC, real-time communication, and collaborative features for educational and business applications.",
    icon: "fas fa-video",
    features: ["WebRTC Integration", "Screen Sharing", "Multi-user Collaboration"],
  },
  {
    title: "Cybersecurity Platforms",
    description:
      "Develop threat intelligence systems, security dashboards, and cybersecurity tools with enterprise-grade security standards.",
    icon: "fas fa-shield-alt",
    features: ["Threat Intelligence", "Security Dashboards", "MISP/OpenCTI Integration"],
  },
  {
    title: "Full-Stack Web Applications",
    description:
      "Complete web application development using modern technologies like React, Node.js, and scalable cloud architectures.",
    icon: "fas fa-laptop-code",
    features: ["React/Next.js Frontend", "Node.js Backend", "Cloud Deployment"],
  },
  {
    title: "Cross-Platform Applications",
    description:
      "Build applications that work across web, mobile, and desktop platforms using unified development approaches.",
    icon: "fas fa-mobile-alt",
    features: ["React Native Apps", "Electron Desktop", "Progressive Web Apps"],
  },
  {
    title: "Business Intelligence Dashboards",
    description:
      "Create data-driven dashboards and analytics platforms with real-time insights and automated reporting capabilities.",
    icon: "fas fa-chart-bar",
    features: ["Custom Dashboards", "Real-time Analytics", "Data Visualization"],
  },
  {
    title: "Technical Consulting",
    description:
      "Expert guidance on technology stack selection, system architecture design, and development strategy for complex projects.",
    icon: "fas fa-cogs",
    features: ["Architecture Design", "Tech Stack Selection", "Performance Optimization"],
  },
];

interface Props {
  title?: string;
}

const { title = "My Services" } = Astro.props;
---

<section
  id="services-overview"
  class="bg-cyber-dark/60 pb-16 lg:pb-24 pt-32 lg:pt-40 relative overflow-hidden"
>
  <div class="max-w-7xl mx-auto px-6">
    <div
      class="absolute w-96 h-96 bg-cyber-blue/5 rounded-full blur-3xl -bottom-20 -right-20"
    ></div>

    <div class="flex justify-center mb-16">
      <div class="relative">
        <h2 class="text-4xl md:text-5xl font-bold text-center">
          {title.split(" ")[0]}{" "}
          <span class="text-cyber-blue text-shadow-glow">
            {title.split(" ")[1]}
          </span>
        </h2>
        <div class="h-1 w-24 bg-cyber-blue mt-4 mx-auto rounded-full glow"></div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {servicesData.map((service, index) => (
        <ServiceCard service={service} index={index} />
      ))}
    </div>
  </div>
</section>