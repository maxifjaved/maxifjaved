---
import ServiceCard from './ServiceCard.astro';

export interface ServiceType {
  title: string;
  description: string;
  icon: string;
  features: string[];
}

export const servicesData: ServiceType[] = [
  {
    title: "Machine Learning",
    description:
      "Build predictive models and intelligent systems to optimize operations and uncover insights from your data.",
    icon: "fas fa-brain",
    features: ["Predictive Analytics", "Anomaly Detection", "Recommendation Systems"],
  },
  {
    title: "Natural Language Processing",
    description:
      "Enhance customer interactions with AI-powered chatbots, sentiment analysis, and text processing solutions.",
    icon: "fas fa-comment-alt",
    features: ["Chatbot Development", "Sentiment Analysis", "Text Summarization"],
  },
  {
    title: "Computer Vision",
    description:
      "Leverage image and video analysis to enhance security, automate inspections, and improve user experiences.",
    icon: "fas fa-eye",
    features: ["Object Detection", "Image Classification", "Facial Recognition"],
  },
  {
    title: "Generative AI",
    description:
      "Create innovative content and solutions with AI-driven text, image, and media generation technologies.",
    icon: "fas fa-paint-brush",
    features: ["Text Generation", "Image Synthesis", "Creative Automation"],
  },
  {
    title: "Cloud AI Integration",
    description:
      "Seamlessly integrate AI solutions with cloud platforms for scalable, secure, and efficient operations.",
    icon: "fas fa-cloud",
    features: ["AWS SageMaker", "Azure AI", "Google Cloud AI"],
  },
  {
    title: "Data Analytics",
    description:
      "Transform raw data into actionable insights with advanced analytics and visualization tools.",
    icon: "fas fa-chart-line",
    features: ["Data Visualization", "Business Intelligence", "Big Data Processing"],
  },
];

interface Props {
  title?: string;
}

const { title = "Our Expertise" } = Astro.props;
---

<section
  id="services-overview"
  class="bg-cyber-dark/60 pb-16 lg:pb-24 pt-32 lg:pt-40 relative overflow-hidden"
>
  <div class="max-w-7xl mx-auto px-6">
    <div
      class="absolute w-96 h-96 bg-cyber-blue/5 rounded-full blur-3xl -bottom-20 -right-20"
    ></div>

    <div class="flex justify-center mb-16">
      <div class="relative">
        <h2 class="text-4xl md:text-5xl font-bold text-center">
          {title.split(" ")[0]}{" "}
          <span class="text-cyber-blue text-shadow-glow">
            {title.split(" ")[1]}
          </span>
        </h2>
        <div class="h-1 w-24 bg-cyber-blue mt-4 mx-auto rounded-full glow"></div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {servicesData.map((service, index) => (
        <ServiceCard service={service} index={index} />
      ))}
    </div>
  </div>
</section>