---
export interface TechnicalExpertiseType {
  title: string;
  categories: {
    name: string;
    icon: string;
    technologies: string[];
    experience: string;
  }[];
}

const technicalData: TechnicalExpertiseType = {
  title: "Technical Expertise",
  categories: [
    {
      name: "Real-time & Communication",
      icon: "fas fa-video",
      technologies: ["WebRTC", "OpenVidu", "Socket.io", "Agora", "Pusher"],
      experience: "Expert-level experience building platforms supporting 50+ concurrent users with ultra-low latency"
    },
    {
      name: "Frontend Development",
      icon: "fas fa-code",
      technologies: ["React", "Next.js", "Vue.js", "Astro", "Fabric.js", "Alpine.js"],
      experience: "Modern component-based architectures with focus on performance and user experience"
    },
    {
      name: "Backend Systems",
      icon: "fas fa-server",
      technologies: ["Node.js", "Express.js", "Laravel", "PHP", "CodeIgniter"],
      experience: "Scalable server architectures handling enterprise workloads and real-time data processing"
    },
    {
      name: "Database & Storage",
      icon: "fas fa-database",
      technologies: ["MongoDB", "MySQL", "PostgreSQL", "AWS S3", "Digital Ocean Spaces"],
      experience: "Database design and optimization for high-performance applications"
    },
    {
      name: "Cloud & DevOps",
      icon: "fas fa-cloud",
      technologies: ["Digital Ocean", "AWS", "Google Cloud", "Vercel", "Docker"],
      experience: "Cloud-native deployments with automated scaling and global distribution"
    },
    {
      name: "Mobile & Desktop",
      icon: "fas fa-mobile-alt",
      technologies: ["React Native", "Ionic", "Electron", "PWA", "Android"],
      experience: "Cross-platform applications spanning web, mobile, and desktop environments"
    }
  ]
};
---

<section class="py-24 relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 relative">
    <div class="flex justify-center mb-16">
      <div class="relative">
        <h2 class="text-3xl md:text-4xl font-bold text-center">
          Technical{" "}
          <span class="text-cyber-blue text-shadow-glow">Expertise</span>
        </h2>
        <div class="h-1 w-32 bg-cyber-blue mt-4 mx-auto rounded-full glow"></div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {technicalData.categories.map((category, index) => (
        <div
          class="group relative"
          x-data="{ visible: false }"
          x-intersect.once="visible = true"
          x-bind:class={`visible ? 'animated fadeInUp delay${(index + 1) * 100}' : 'opacity-0'`}
        >
          <div
            class="absolute inset-0 bg-cyber-blue/10 blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          ></div>
          <div
            class="border border-cyber-blue/20 bg-cyber-dark/70 backdrop-blur-sm rounded-xl p-6 h-full relative hover:border-cyber-blue/50 transition-all duration-300"
          >
            <div
              class="w-12 h-12 rounded-full bg-cyber-blue/20 border border-cyber-blue flex items-center justify-center mb-4 glow"
            >
              <i class={category.icon + " text-cyber-blue text-xl"}></i>
            </div>
            <h3 class="text-xl font-bold mb-4 text-cyber-blue">
              {category.name}
            </h3>
            <p class="text-gray-300 text-sm mb-4 leading-relaxed">
              {category.experience}
            </p>
            <div class="flex flex-wrap gap-2">
              {category.technologies.map((tech) => (
                <span
                  class="px-2 py-1 bg-cyber-blue/10 rounded-md text-xs text-cyber-blue border border-cyber-blue/20"
                >
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>