---
export interface Props {
  searchQuery?: string;
  selectedCategory?: string | null;
}

const { searchQuery = '', selectedCategory = null } = Astro.props;
---

<div class="max-w-md mx-auto mb-12">
  <form method="GET" action="/blogs" class="relative">
    {selectedCategory && (
      <input type="hidden" name="category" value={selectedCategory} />
    )}
    <input
      type="text"
      name="search"
      value={searchQuery}
      placeholder="Search articles..."
      class="w-full px-4 py-3 pl-12 bg-gray-800 border border-gray-600 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-cyber-blue focus:ring-1 focus:ring-cyber-blue transition-colors"
    />
    <svg
      class="absolute left-4 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
      ></path>
    </svg>
    <button
      type="submit"
      class="absolute right-2 top-1/2 transform -translate-y-1/2 px-4 py-1.5 bg-cyber-blue text-white rounded hover:bg-blue-600 transition-colors"
    >
      Search
    </button>
  </form>
</div>