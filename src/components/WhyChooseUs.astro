---
export interface FeatureType {
  icon: string;
  title: string;
  description: string;
}

const featureData: FeatureType[] = [
  {
    icon: "fas fa-code",
    title: "Full-Stack Mastery",
    description:
      "Deep expertise across the entire technology stack - from React/Node.js frontends to scalable backend architectures, databases, and cloud deployment.",
  },
  {
    icon: "fas fa-video",
    title: "Real-time Systems Expert",
    description:
      "Specialized in WebRTC, Socket.io, and real-time collaboration platforms. Built systems supporting 50+ concurrent users with ultra-low latency.",
  },
  {
    icon: "fas fa-shield-alt",
    title: "Enterprise Security Focus",
    description:
      "Developed cybersecurity platforms integrating MISP and OpenCTI for threat intelligence, ensuring production-grade security standards.",
  },
  {
    icon: "fas fa-user-cog",
    title: "Solo Development Excellence",
    description:
      "Proven track record of delivering complex enterprise projects independently - from conception to deployment, managing entire development lifecycle.",
  },
  {
    icon: "fas fa-chart-line",
    title: "Scalable Architecture",
    description:
      "Built platforms serving educational institutions globally, with cloud-native architectures on Digital Ocean, AWS, and Google Cloud Platform.",
  },
  {
    icon: "fas fa-tools",
    title: "Multi-Platform Innovation",
    description:
      "Experience spanning web applications, mobile apps (React Native, Ionic), desktop software (Electron), and browser extensions across 47+ technologies.",
  },
];
---

<section
  id="why-choose-us"
  class="bg-cyber-dark/20 py-24 relative overflow-hidden"
>
  <div
    class="absolute top-0 left-0 w-full h-64 bg-gradient-to-b from-cyber-dark to-transparent"
  ></div>
  <div
    class="absolute bottom-0 left-0 w-full h-64 bg-gradient-to-t from-cyber-dark to-transparent"
  ></div>

  <div class="max-w-7xl mx-auto px-6 relative">
    <div class="flex justify-center mb-16">
      <div class="relative">
        <h2 class="text-3xl md:text-4xl font-bold text-center">
          Why <span class="text-cyber-blue text-shadow-glow">Choose Me</span>
        </h2>
        <div class="h-1 w-32 bg-cyber-blue mt-4 mx-auto rounded-full glow"></div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {featureData.map((feature, index) => (
        <div
          class="group relative"
          x-data="{ visible: false }"
          x-intersect.once="visible = true"
          x-bind:class={`visible ? 'animated fadeInUp delay${(index + 1) * 100}' : 'opacity-0'`}
        >
          <div
            class="absolute inset-0 bg-cyber-blue/10 blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          ></div>
          <div
            class="border border-cyber-blue/20 bg-cyber-dark/70 backdrop-blur-sm rounded-xl p-6 h-full relative hover:border-cyber-blue/50 transition-all duration-300"
          >
            <div
              class="w-12 h-12 rounded-full bg-cyber-blue/20 border border-cyber-blue flex items-center justify-center mb-4 glow"
            >
              <i class={feature.icon + " text-cyber-blue text-xl"}></i>
            </div>
            <h3 class="text-xl font-bold mb-2 text-cyber-blue">
              {feature.title}
            </h3>
            <p class="text-gray-300">{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>