---
import WorkCard from './WorkCard.astro';
export interface WorkStepType {
  step: number;
  title: string;
  description: string;
}

export const workStepsData: WorkStepType[] = [
  {
    step: 1,
    title: "Discovery",
    description:
      "We analyze your business needs and identify opportunities for AI-driven transformation.",
  },
  {
    step: 2,
    title: "Design",
    description:
      "Our experts craft tailored AI solutions, from models to architectures, to meet your goals.",
  },
  {
    step: 3,
    title: "Development",
    description:
      "We build and test robust AI systems using cutting-edge tools and frameworks.",
  },
  {
    step: 4,
    title: "Deployment & Support",
    description:
      "We deploy solutions and provide ongoing support to ensure long-term success.",
  },
];

interface Props {
  title?: string;
}

const { title = "How We Work" } = Astro.props;
---

<section id="how-we-work" class="py-24 relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-6 relative">
    <div class="flex justify-center mb-16">
      <div class="relative">
        <h2 class="text-3xl md:text-4xl font-bold text-center">
          {title.split(" ")[0]}{" "}
          {title.split(" ")[1]}{" "}
          <span class="text-cyber-blue text-shadow-glow">
            {title.split(" ")[2]}
          </span>
        </h2>
        <div class="h-1 w-24 bg-cyber-blue mt-4 mx-auto rounded-full glow"></div>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {workStepsData.map((step, index) => (
        <WorkCard step={step} index={index} />
      ))}
    </div>
  </div>
</section>