---
import Logo from "./Logo.astro";

export interface FooterType {
  description: string;
  links: { label: string; href: string }[];
  pages: { label: string; href: string }[];
  contact: {
    email: { label: string; href: string };
    phone: { label: string; href: string };
    address: string;
  };
  social: { icon: string; href: string }[];
}

const footerData: FooterType = {
  description:
    "Full-Stack Developer & Real-time Systems Expert specializing in WebRTC, cybersecurity platforms, and enterprise-grade solutions.",
  links: [
    { label: "Projects", href: "/projects" },
    { label: "About", href: "/about" },
    { label: "Contact", href: "/contact" },
  ],
  pages: [],
  contact: {
    email: {
      label: "axif.javed@gmail.com",
      href: "mailto:axif.javed@gmail.com",
    },
    phone: {
      label: "+92 332 464 7331",
      href: "https://api.whatsapp.com/send?phone=923324647331&text=%F0%9F%93%9E%20Hi%20Asif.%20How%20are%20you%3F",
    },
    address: "Walton, Lahore, PK",
  },
  social: [
    { icon: "fab fa-github", href: "https://github.com/maxifjaved" },
    { icon: "fab fa-linkedin", href: "https://linkedin.com/in/maxifjaved" },
  ],
};
---

<footer
  class="z-10 bg-cyber-dark py-16 relative border-t border-cyber-blue/20 overflow-hidden"
>
  <div
    class="absolute w-96 h-96 bg-cyber-blue/5 rounded-full blur-3xl -top-20 -left-20 animate-pulse-slow"
  >
  </div>
  <div
    class="absolute w-64 h-64 bg-cyber-blue/5 rounded-full blur-3xl -bottom-20 -right-20 animate-pulse-slow"
    style="animation-delay: 2s;"
  >
  </div>

  <div class="max-w-7xl mx-auto px-6 relative">
    <div class="text-center">
      <div class="mb-6 font-future flex justify-center">
        <Logo />
      </div>
      <p class="text-gray-300 mb-4 max-w-2xl mx-auto">{footerData.description}</p>
      
      <div class="text-gray-400 text-sm mb-8">
        <a href={footerData.contact.email.href} class="hover:text-cyber-blue transition-colors mr-6">
          {footerData.contact.email.label}
        </a>
        <a href={footerData.contact.phone.href} class="hover:text-cyber-blue transition-colors mr-6">
          {footerData.contact.phone.label}
        </a>
        <span class="text-cyber-blue font-semibold">{footerData.contact.address}</span>
      </div>
    </div>

    <div class="pt-8 border-t border-cyber-blue/20 flex flex-col md:flex-row justify-between items-center">
      <div class="flex flex-wrap gap-6 mb-4 md:mb-0">
        {
          footerData.links.map((link) => (
            <a
              href={link.href}
              class="text-gray-300 hover:text-cyber-blue transition-colors text-sm"
            >
              {link.label}
            </a>
          ))
        }
      </div>
      
      <div class="flex items-center gap-6">
        <div class="flex gap-4">
          {
            footerData.social.map((social) => (
              <a
                href={social.href}
                target="_blank"
                class="text-cyber-blue hover:text-white transition-colors"
              >
                <i class={social.icon + " text-xl"} />
              </a>
            ))
          }
        </div>
        <span class="text-gray-400 text-sm">
          Â© {new Date().getFullYear()} Muhammad Asif Javed
        </span>
      </div>
    </div>
  </div>
</footer>
