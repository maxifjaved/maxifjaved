---
import Logo from "./Logo.astro";

export interface NavItemType {
  label: string;
  href: string;
  isActive?: boolean;
}

const navItems: NavItemType[] = [
  { label: "Home", href: "/" },
  { label: "About", href: "/about" },
  { label: "Services", href: "/services" },
  { label: "Projects", href: "/projects" },
  { label: "Contact", href: "/contact" },
  { label: "Blogs", href: "/blogs" },
];

const currentPath = Astro.url.pathname;
---

<header
  x-data="{ mobileMenuOpen: false }"
  class="fixed w-full z-40 bg-cyber-dark/80 backdrop-blur-md border-b border-cyber-blue/20"
>
  <div class="max-w-7xl mx-auto px-6 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="flex items-center font-future">
        <Logo />
      </a>

      <!-- Desktop Menu -->
      <nav class="hidden lg:flex space-x-8 font-future">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class:list={[
                "text-white hover:text-cyber-blue transition-colors",
                {
                  "!text-cyber-blue":
                    currentPath === item.href ||
                    (item.href !== "/" && currentPath.startsWith(item.href)),
                },
              ]}
            >
              {item.label}
            </a>
          ))
        }
      </nav>

      <!-- Mobile menu button -->
      <button
        @click="mobileMenuOpen = !mobileMenuOpen"
        class="lg:hidden text-cyber-blue focus:outline-none"
      >
        <i class="fas fa-bars text-2xl" x-show="!mobileMenuOpen"></i>
        <i
          class="fas fa-times text-2xl"
          style="display: none;"
          x-show="mobileMenuOpen"></i>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div
      x-show="mobileMenuOpen"
      x-transition
      class="lg:hidden mt-4 pb-4 font-future"
      style="display:none;"
    >
      <nav class="flex flex-col space-y-4">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class:list={[
                "text-white hover:text-cyber-blue transition-colors",
                {
                  "!text-cyber-blue":
                    currentPath === item.href ||
                    (item.href !== "/" && currentPath.startsWith(item.href)),
                },
              ]}
            >
              {item.label}
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</header>
