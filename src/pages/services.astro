---
import HowWeWork from "../components/HowWeWork.astro";
import ServiceSection from "../components/ServiceSection.astro";
import CTA from "../components/CTA.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout
  title="Expert WebRTC & Full-Stack Development Services | Asif Javed"
  description="Professional WebRTC development, real-time systems, cybersecurity platforms, and enterprise solutions. Hire expert full-stack developer with 10+ years experience in Lahore, Pakistan."
  keywords="WebRTC development services, full-stack developer for hire, real-time systems expert, cybersecurity platform development, enterprise software solutions, Lahore Pakistan developer, remote development services"
>
    <ServiceSection />
    <HowWeWork />
    
    <!-- Services CTA Section -->
    <section
      id="services-cta"
      class="bg-cyber-dark/60 py-16 lg:py-24 relative overflow-hidden"
    >
      <div class="absolute w-96 h-96 bg-cyber-blue/5 rounded-full blur-3xl -bottom-20 -right-20"></div>
      
      <div class="max-w-4xl mx-auto px-6 text-center relative">
        <h3 class="text-2xl md:text-3xl font-bold mb-6 text-cyber-blue text-shadow-glow">
          Have a project in mind?
        </h3>
        <p class="text-gray-300 mb-8 text-lg leading-relaxed">
          Whether you need a complex platform built from scratch or expert consulting on your next project, I deliver production-ready solutions that scale.
        </p>
        <a
          href="/contact"
          class="inline-flex items-center justify-center cyber-btn bg-cyber-blue hover:bg-cyber-blue/80 text-cyber-dark font-bold py-3 px-8 text-lg transition-all duration-300 glow"
        >
          Let's Talk
        </a>
      </div>
    </section>
    
    <CTA />
</MainLayout>

<!-- Service Schema Markup -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Full-Stack Web Development Services",
  "provider": {
    "@type": "Person",
    "name": "Muhammad Asif Javed",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "Lahore",
      "addressRegion": "Punjab",
      "addressCountry": "Pakistan"
    }
  },
  "areaServed": ["Pakistan", "Global Remote Services"],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Web Development Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Real-time Collaboration Systems",
          "description": "WebRTC integration, screen sharing, multi-user collaboration platforms"
        }
      },
      {
        "@type": "Offer", 
        "itemOffered": {
          "@type": "Service",
          "name": "Cybersecurity Platforms",
          "description": "Threat intelligence systems, security dashboards, enterprise security tools"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service", 
          "name": "Full-Stack Web Applications",
          "description": "Complete web application development with React, Node.js, cloud deployment"
        }
      }
    ]
  }
}
</script>