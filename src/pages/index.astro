---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

const skills = [
	{ name: 'React', level: 92 },
	{ name: 'Next.js', level: 92 },
	{ name: 'NodeJS', level: 85 },
	{ name: 'HTML/CSS', level: 90 },
];

const experience = [
	{
		period: "2019 - Present",
		company: "Digital Dot",
		role: "Technical Project Manager",
		description: "Lead development teams, implement monitoring systems, and resolve production issues efficiently."
	},
	{
		period: "2017 - 2019",
		company: "Renesis Tech",
		role: "Web Application Developer",
		description: "Developed web-based solutions and tackled complex architectural challenges."
	},
	{
		period: "2016 - 2017",
		company: "A'ala Solutions",
		role: "Software Engineer",
		description: "Built solutions using Ember.js, React, and NodeJS while providing technical support."
	}
];

const technologies = [
	'React', 'TypeScript', 'Next.js', 'PostgreSQL', 'Node.js',
	'GraphQL', 'Python', 'Laravel', 'PHP'
];
---

<Layout
	title="Muhammad Asif Javed - Senior Full Stack Developer | React, Next.js, Node.js Expert"
	description="Full Stack Developer with 8+ years of experience specializing in React, Next.js, and Node.js. Based in Lahore, Pakistan. Expert in creating scalable web applications and solving complex technical challenges."
>
	<main class="min-h-screen">
		<!-- Hero Section -->
		<section class="bg-gradient-to-b from-gray-900 to-gray-800 text-white py-20">
			<div class="max-w-6xl mx-auto px-4">
				<div class="flex flex-col md:flex-row items-center gap-12">
					<div class="md:w-2/3">
						<h1 class="text-4xl md:text-6xl font-bold mb-4">
							Muhammad Asif Javed
						</h1>
						<h2 class="text-2xl md:text-3xl text-blue-400 mb-6">
							Full Stack Developer
						</h2>
						<p class="text-lg text-gray-300 mb-8 leading-relaxed">
							A versatile web developer from Pakistan with 8+ years of experience in crafting imaginative and user-friendly digital solutions. Specializing in React, Next.js, Node.js, and TypeScript.
						</p>
						<div class="flex gap-4 flex-wrap">
							<a href="#contact" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition-colors">
								Hire Me
							</a>
							<a href="/resume.pdf" class="border border-blue-600 text-blue-400 hover:bg-blue-900/30 px-6 py-3 rounded-lg transition-colors inline-flex items-center gap-2">
								 Download CV
							</a>
						</div>
					</div>
					<div class="md:w-1/3">
						<div class="relative w-64 h-64 mx-auto">
							<div class="absolute inset-0 bg-blue-600 rounded-full opacity-20 blur-2xl"></div>
							<img
								src="/profile.jpg"
								alt="Muhammad Asif Javed"
								class="rounded-full w-64 h-64 object-cover relative z-10"
								loading="eager"
							/>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Skills Section -->
		<section class="py-20 bg-white" id="skills">
			<div class="max-w-6xl mx-auto px-4">
				<h2 class="text-3xl font-bold text-center mb-12">Skills & Expertise</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					<div>
						{skills.map(skill => (
							<div class="mb-6">
								<div class="flex justify-between mb-2">
									<span class="font-medium">{skill.name}</span>
									<span>{skill.level}%</span>
								</div>
								<div class="h-2 bg-gray-200 rounded-full">
									<div
										class="h-2 bg-blue-600 rounded-full"
										style={`width: ${skill.level}%`}
									></div>
								</div>
							</div>
						))}
					</div>
					<div>
						<h3 class="text-xl font-semibold mb-4">Technologies</h3>
						<div class="flex flex-wrap gap-2">
							{technologies.map(tech => (
								<span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm">
                                    {tech}
                                </span>
							))}
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Experience Section -->
		<section class="py-20 bg-gray-50" id="experience">
			<div class="max-w-6xl mx-auto px-4">
				<h2 class="text-3xl font-bold text-center mb-12">Professional Experience</h2>
				<div class="space-y-8">
					{experience.map(job => (
						<div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
							<div class="flex justify-between items-start mb-4">
								<div>
									<h3 class="text-xl font-semibold">{job.role}</h3>
									<p class="text-blue-600">{job.company}</p>
								</div>
								<span class="text-gray-500">{job.period}</span>
							</div>
							<p class="text-gray-600">{job.description}</p>
						</div>
					))}
				</div>
			</div>
		</section>

		<!-- Contact Section -->
		<section class="py-20 bg-gray-900 text-white" id="contact">
			<div class="max-w-6xl mx-auto px-4">
				<h2 class="text-3xl font-bold text-center mb-12">Get In Touch</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
					<div>
						<div class="space-y-6">
							<a href="mailto:axif.javed@gmail.com" class="flex items-center gap-4 text-lg hover:text-blue-400 transition-colors">
								Mail:
								axif.javed@gmail.com
							</a>
							<a href="tel:+923324647331" class="flex items-center gap-4 text-lg hover:text-blue-400 transition-colors">
								Phone:
								+92 332 4647 331
							</a>
							<p class="flex items-center gap-4 text-lg">
								MapPin
								Lahore, Pakistan
							</p>
						</div>
						<div class="flex gap-4 mt-8">
							<a href="https://github.com/maxifjaved" target="_blank" rel="noopener noreferrer" class="text-white hover:text-blue-400 transition-colors">
								Github
							</a>
							<a href="https://linkedin.com/in/maxifjaved" target="_blank" rel="noopener noreferrer" class="text-white hover:text-blue-400 transition-colors">
								Linkedin
							</a>
						</div>
					</div>
					<form class="space-y-6" name="contact" method="POST" data-netlify="true">
						<input type="hidden" name="form-name" value="contact" />
						<div>
							<input
								type="text"
								name="name"
								placeholder="Your Name"
								required
								class="w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white focus:outline-none focus:border-blue-500"
							/>
						</div>
						<div>
							<input
								type="email"
								name="email"
								placeholder="Your Email"
								required
								class="w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white focus:outline-none focus:border-blue-500"
							/>
						</div>
						<div>
                            <textarea
								name="message"
								placeholder="Your Message"
								required
								rows="4"
								class="w-full px-4 py-3 rounded-lg bg-gray-800 border border-gray-700 text-white focus:outline-none focus:border-blue-500"
							></textarea>
						</div>
						<button
							type="submit"
							class="w-full bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition-colors"
						>
							Send Message
						</button>
					</form>
				</div>
			</div>
		</section>
	</main>
</Layout>