---
import PortfolioLayout from '../layouts/PortfolioLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION, SITE_KEYWORDS } from '../consts';
---

<PortfolioLayout
	title={SITE_TITLE}
	description={SITE_DESCRIPTION}
	type="profile"
	keywords={SITE_KEYWORDS}
>
	<header>
		<img src="/profile-image.jpg"
			 alt="Portrait of Muhammad Asif Javed"
			 width="150"
			 height="150"
			 fetchpriority="high"
			 class="profile-img"
			 srcset="/profile-image.jpg 1x, /profile-image@2x.jpg 2x"
			 sizes="(max-width: 600px) 100px, 150px">
		
		<h1>🤖 Hire Muhammad Asif Javed | AI Integration Expert & Full-Stack Developer</h1>
		<h2 class="subtitle">Remote AI Developer • LangChain Specialist • OpenAI Integration Expert • Founder of QuranGallery.app</h2>
		<p><strong>Available for remote AI development projects | $85/hr | Immediate availability | 25K+ users served</strong></p>
		
		<nav aria-label="Primary">
			<ul>
				<li><a href="https://github.com/maxifjaved" title="GitHub Profile" target="_blank" rel="noopener noreferrer">🔗 GitHub</a></li>
				<li><a href="https://qurangallery.app" title="QuranGallery.app" target="_blank" rel="noopener noreferrer">🌟 QuranGallery</a></li>
				<li><a href="https://linkedin.com/in/maxifjaved" title="LinkedIn Profile" target="_blank" rel="noopener noreferrer">💼 LinkedIn</a></li>
				<li><a href="mailto:axif.javed@gmail.com" title="Email Contact">📧 Email</a></li>
			</ul>
		</nav>
	</header>

	<div class="container">
		
		<!-- About Section -->
		<section id="about" class="section">
